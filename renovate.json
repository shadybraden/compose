{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "commitMessagePrefix": ":label:",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/syncthing"],
      "versioning": "regex:^(?<major>\\d{1,2})\\.(?<minor>\\d{1,2})\\.(?<patch>\\d{1,2})\\.(?<build>\\d+)(?:-(?<compatibility>ls)(?<revision>\\d+))?$"
    }
  ]
}